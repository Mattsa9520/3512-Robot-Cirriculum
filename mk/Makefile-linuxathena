$(OBJDIR)/frcUserProgram: $(OBJ_C) $(OBJ_CPP) $(OBJ_CC) $(OBJ_GEN_CPP) $(OBJ_THIRDPARTY_CC) $(OBJ_THIRDPARTY_CPP)
	@mkdir -p $(@D)
	@echo [LD] $@
ifdef VERBOSE
	$(LD) -o $@ $+ $(LDFLAGS)
	$(STRIP) -g $@
else
	@$(LD) -o $@ $+ $(LDFLAGS)
	@$(STRIP) -g $@
endif


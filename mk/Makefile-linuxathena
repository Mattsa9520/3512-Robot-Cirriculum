CPPFLAGS := -Wall -Wextra -std=c++17 -Wformat=2 -pedantic -Wno-psabi -Wno-unused-parameter -Wno-attributes -Wno-error=deprecated-declarations -fPIC -rdynamic -pthread -Werror -O2

